                                    <th></th>                                  
                                </tr>
                            </thead>                                 
                            <tbody>                                  
                                <tr>               
                                    <td><h5>Nhận xét:
                                        <div class="input-group">
                                            <input type="cmt" id="cmt" name="cmt" class="form-control" >														
						                </div>
                                        <button action="/insertCmt" type="submit">Thêm</button>
                                    </h5></td>
                                    <td></td>                                                
                                </tr>	                               		  		  
                            </tbody>                    
                        </table>   
                    </form>           
                    </h4>
                </div>
            </div>
        </div>
    </div>
</section>
