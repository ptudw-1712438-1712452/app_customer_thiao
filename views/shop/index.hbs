{{> homeSlider}}
{{> headerText}}
<br />
<section class="main-content">
<section class="header_text sub">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div id="success" class="alert alert-success " {{#if noMessages}}hidden{{/if}}>
                <h4>{{ successMsg }}</h4>
            </div>
		</div>
    </div>
</section>

{{# each products}}

    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span12">
                    <div id="myCarousel" class="myCarousel carousel slide">
                        <div class="carousel-inner">
                            <div class="active item">
                                <ul class="thumbnails">
                                    {{# each this}}
                                    <li class="span3">
                                        <div class="product-box">
                                            <span class="sale_tag"></span>
                                            <p><a href="/product_detail/{{this._id}}"><img src="{{this.imagePath_1}}"  /></a></p>
                                            <a href="/product_detail/{{this._id}}" class="title">{{this.title}}</a><br/>
                                            <a href="/product_detail/{{this._id}}" class="category">{{this.description}}</a>                                   
                                            <p href="/product_detail/{{this._id}}" class="price">${{this.price}}</p>
                                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Thêm vào giỏ hàng</a>                                           
                                        </div>
                                    </li>
                                    {{/each}}                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/each}}
</section>
<div class="pagination">
    <a href="/">*</a>
  <a href="?page=1"><b>1</b></a>
  <a href="?page=2"><b>2</b></a>
  <a href="?page=3"><b>3</b></a>
  <a href="?page=4"><b>4</b></a>
  <a href="/">*</a>
</div>

